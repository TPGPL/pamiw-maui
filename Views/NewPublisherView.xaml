<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PamiwMauiApp.Views.NewPublisherView"
             Title="{Binding LocalizationResourceManager[CreatePublisherHeader], Mode=OneWay}">
    <VerticalStackLayout>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Entry Placeholder="{Binding LocalizationResourceManager[PublisherName], Mode=OneWay}" Text="{Binding Publisher.Name}" Grid.Row="0" Grid.Column="1"/>
        </Grid>
        <VerticalStackLayout>
            <Button Margin="10,0" Command="{Binding SaveCommand}" Text="{Binding LocalizationResourceManager[CreateButton], Mode=OneWay}" >
            </Button>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>